@{
    ViewData["Title"] = "Prediction";

    if (Model.PredictedValue == "W") {

        ViewData["Direction"] = "West";
    }

    if (Model.PredictedValue == "E")
    {
        ViewData["Direction"] = "East";
    }
}
@model Prediction


<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    @if (Model.PredictedValue == "W")
            {
                <h2>Predicted Head Direction - West</h2>
            } 
                    @if (Model.PredictedValue == "E")
            {
                <h2>Predicted Head Direction - East</h2>
            }
                </div>

                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="card-body">
                                    
                                    @if (Model.PredictedValue == "W")
                                    {
                                        <img class="card-img" src="~/img/Supervised/WestFacingHead.jpg">
                                    }
                                    
                                    @if (Model.PredictedValue == "E")
                                    {
                                        <img class="card-img" src="~/img/Supervised/EastFacingHead.jpg">
                                    }

                                </div>
                            </div>
                            <div class="col">
                                <div class="card-body">
                                    @if (Model.PredictedValue == "W")
                                    {
                                        <img class="card-img" src="~/img/Supervised/1200px-Compass_Rose_English_West.svg.png">
                                    }
                                    @if (Model.PredictedValue == "E")
                                    {
                                        <img class="card-img" src="~/img/Supervised/1200px-Compass_Rose_English_East.svg.png">
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card-body">
                                <p class="text-center">Using the inputs provided the logistic regression model predicted a head direction of @ViewData["Direction"] </p>
                            </div>
                   
                        </div>
                    </div>
                    
                </div>
                <div class="card-footer">
                    <a asp-controller="Home" asp-action="Supervised" class="btn btn-secondary">Make Another Prediction</a>
                </div>
            </div>
        </div>
    </div>

</div>