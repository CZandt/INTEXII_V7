@{
    ViewData["Title"] = "Details";
}

@model Burialmain
<div class="card">
    <div class="card-header">
        <h2 class="card-title">Burial Data</h2>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Date of Excavation: @Model.Dateofexcavation</li>
            <li class="list-group-item">Preservation State: @Model.Preservation</li>
            <li class="list-group-item">Field Notes: @Model.Fieldbookpage</li>
            <li class="list-group-item">Samples Collected: @Model.Samplescollected</li>
        </ul>
    </div>


</div>

<br />

<h4>Textiles</h4>
<table class="table table-sm table-bordered">
    <tr>
        <th>Direction</th>
        <th>Locale</th>
        <th>Description</th>
        <th>Estimated Period</th>
        <th>Photographed Date</th>
        <th>Sample Date</th>
    </tr>

    @foreach (var item in Model.BurialmainTextiles)
    {
        <tr>
            <td>@item.Textile.Direction</td>
            <td>@item.Textile.Locale</td>
            <td>@item.Textile.Description</td>
            <td>@item.Textile.Estimatedperiod</td>
            <td>@item.Textile.Photographeddate</td>
            <td>@item.Textile.Sampledate</td>
        </tr>
    }
</table>

<br />

<h4>Artifacts</h4>
<table class="table table-sm table-bordered">
    <tr>
        <th>Number</th>
        <th>Position</th>
        <th>Date</th>
        <th>Material</th>
        <th>Dimensions</th>
        <th>Provenance</th>
        <th>Current Location</th>
        <th>Rehoused To</th>
        <th>Photos</th>
    </tr>

    @foreach (var item in Model.ArtifactkomaushimregisterBurialmains)
    {
        <tr>
            <td>@item.Artifactkomaushimregister.Number)</td>
            <td>@item.Artifactkomaushimregister.Position)</td>
            <td>@item.Artifactkomaushimregister.Date)</td>
            <td>@item.Artifactkomaushimregister.Material)</td>
            <td>@item.Artifactkomaushimregister.Dimensions)</td>
            <td>@item.Artifactkomaushimregister.Provenance)</td>
            <td>@item.Artifactkomaushimregister.Currentlocation)</td>
            <td>@item.Artifactkomaushimregister.Rehousedto)</td>
            <td>@item.Artifactkomaushimregister.Photos)</td>
        </tr>
    }
</table>

<br />

<h4>Cranial Measurements</h4>
<table class="table table-sm table-bordered">
    <tr>
        <th>AlphaCore</th>
        <th>Basion Bregma Height</th>
        <th>Basion Nasion</th>
        <th>Basion Prosthion Length</th>
        <th>Bizygomatic Diameter</th>
        <th>Interobital Breadth</th>
        <th>Interorbital Breadth</th>
    </tr>

    @foreach (var item in Model.BurialmainCrania)
    {
        <tr>
            <td>@item.Cranium.AlphaCore)</td>
            <td>@item.Cranium.BasionBregmaHeight)</td>
            <td>@item.Cranium.BasionNasion)</td>
            <td>@item.Cranium.BasionProsthionLength)</td>
            <td>@item.Cranium.BizygomaticDiameter)</td>
            <td>@item.Cranium.InterobitalBreadth)</td>
        </tr>
    }
</table>

<br />

<h4>Body Analysis</h4>
<table class="table table-sm table-bordered">
    <tr>
        <th>Observations</th>
        <th>Femur</th>
        <th>Femurlength</th>
        <th>Femur Head Diameter</th>
        <th>Humerus</th>
        <th>Humerus Length</th>
        <th>Humerus Head Diameter</th>
    </tr>

    @foreach (var item in Model.BurialmainBodyanalysischarts)
    {
<tr>
    <td>@item.Bodyanalysischart.Observations</td>
    <td>@item.Bodyanalysischart.Femur</td>
    <td>@item.Bodyanalysischart.Femurlength</td>
    <td>@item.Bodyanalysischart.Femurheaddiameter</td>
    <td>@item.Bodyanalysischart.Humerus</td>
    <td>@item.Bodyanalysischart.Humeruslength</td>
    <td>@item.Bodyanalysischart.Humerusheaddiameter</td>
</tr>
    }
</table>
