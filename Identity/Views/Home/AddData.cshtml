@{
    ViewData["Title"] = "Add/Edit Burial";
}

@model Burialmain

<h1>Add/Edit Burial Data</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="Depth">Depth</label>
        <input asp-for="Depth" /><br />
        
        <label asp-for="Length">Length</label>
        <input asp-for="Length" /><br />
        
        <label asp-for="Headdirection">Head Direction</label>
        <select asp-for="Headdirection">
            <option value="N">North</option>
            <option value="S">South</option>
            <option value="E">East</option>
            <option value="W">West</option>
        </select><br />
        
        <label  asp-for="Preservation">Preservation</label>
        <input asp-for="Preservation" /><br />

        <label asp-for="Wrapping">Wrapping</label>
        <select asp-for="Wrapping">
            <option value="B">B</option>
            <option value="H">H</option>
            <option value="W">W</option>
        </select><br />

        <label asp-for="Sex">Sex</label>
        <select asp-for="Sex">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select><br />

        <label asp-for="Ageatdeath">Ageatdeath</label>
        <select asp-for="Ageatdeath">
            <option value="A">A</option>
            <option value="N">N</option>
            <option value="I">I</option>
            <option value="C">C</option>
        </select><br />

        <label asp-for="Haircolor">Haircolor</label>
        <input asp-for="Haircolor" /><br />

        <button type="submit">Submit Data</button>
    </form>
</div>