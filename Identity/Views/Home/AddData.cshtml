@{
    ViewData["Title"] = "Add/Edit Burial";
}

@model Burialmain


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add/Edit Burial Data</h2>
            <div asp-validation-summary="All"></div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Depth">Depth</label>
                <input asp-for="Depth" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Length">Length</label>
                <input asp-for="Length" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Headdirection">Head Direction</label>
                <br />
                <select asp-for="Headdirection">
                    <option value="N">North</option>
                    <option value="S">South</option>
                    <option value="E">East</option>
                    <option value="W">West</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Preservation">Preservation</label>
                <input asp-for="Preservation" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Wrapping">Wrapping</label>
                <br />
                <select asp-for="Wrapping">
                    <option value="B">B</option>
                    <option value="H">H</option>
                    <option value="W">W</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Sex">Sex</label>
                <br />
                <select asp-for="Sex">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Ageatdeath">Ageatdeath</label>
                <br />
                <select asp-for="Ageatdeath">
                    <option value="A">A</option>
                    <option value="N">N</option>
                    <option value="I">I</option>
                    <option value="C">C</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Haircolor">Haircolor</label>
                <input asp-for="Haircolor" class="form-control" />
            </div>

        </div>
        <div class="card-footer">
            <button class="btn btn-info" type="submit">Submit Data</button>
        </div>
    </div>
</form>
