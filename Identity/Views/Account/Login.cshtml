@model Login
@{
    ViewData["Title"] = "Login";
}

<div class="text-danger" asp-validation-summary="All"></div>
<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" type="password" />
                        </div>
                        <div class="form-group">
                            Remember me? <input type="checkbox" asp-for="Remember" />
                        </div>
                        <button class="btn btn-primary" type="submit">Log In</button>
                        <!--<a class="btn btn-info" asp-action="GoogleLogin">Log In With Google</a> LOG IN WITH GOOGLE NOT WORKING WITH DOTNET 3.1.32-->
                        <a class="btn btn-secondary" asp-action="ForgotPassword">Forgot Password</a>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="text-center">
                <img class="rounded mx-auto float-right" src="~/img/login/loginegyptian.jpg" />
            </div>
            
        </div>
    </div>


</div>

